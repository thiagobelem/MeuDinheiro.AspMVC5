@model MeuDinheiro.AppMvc.ViewModels.LancamentoViewModel


<div class="row justify-content-md-center">
    @Html.LabelFor(m => m.Tipo)
    <div class="col-3">
        <div class="form-check mb-3">
            @Html.RadioButtonFor(m => m.Tipo, "Receita", new { @class = "form-check-input", @id = "checkboxReceita" })
            <label class="custom-control-label" for="checkboxReceita">Receita</label>
        </div>
    </div>
    <div class="col-3">
        <div class="form-check">
            @Html.RadioButtonFor(m => m.Tipo, "Despesa", new { @class = "form-check-input", @id = "checkboxDespesa" })
            <label class="custom-control-label" for="checkboxDespesa">Despesa</label>
        </div>
    </div>
    @Html.ValidationMessageFor(m => m.Tipo, "", new { @class = "text-danger" })
</div>

<div class="form-group mb-3">
    @Html.LabelFor(m => m.Descricao)
    @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control", @placeholder = "Descrição" })
    @Html.ValidationMessageFor(m => m.Descricao, "", new { @class = "text-danger" })
</div>


<div class="row">
    <div class="col">
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Data)
            @Html.TextBoxFor(m => m.Data, new { @class = "form-control datepicker", @placeholder = "Data", @onfocus = "focused(this)", @onfocusout = "defocused(this)" })
            @Html.ValidationMessageFor(m => m.Data, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col">
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Valor)
            @Html.TextBoxFor(m => m.Valor, new { @class = "form-control", @placeholder = "Valor (R$)" })
            @Html.ValidationMessageFor(m => m.Valor, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

<div class="form-group mb-3">
    @Html.LabelFor(m => m.CategoriaId)
    @Html.DropDownListFor(expression: m => m.CategoriaId, selectList: new SelectList(Model.Categorias, "Id","Descricao"), optionLabel: "--Selecione--", htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategoriaId, "", new { @class = "text-danger" })
</div>
